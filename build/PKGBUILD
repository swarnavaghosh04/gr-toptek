pkgname=gr-toptek
pkgver=1.0.0
pkgrel=1
pkgdesc="GNURadio OutOfTree module for controlling toptek amplifier"
arch=('any')
license=('GPL')
depends=('gnuradio' 'libsndfile')
source=()
md5sums=()
url="https://github.com/utat-ss/HERON-gr-utat"
build(){
  cd ..
  cmake .. -DCMAKE_INSTALL_PREFIX="/usr"
  cmake --build .
}
package() {
  cd ..
  DESTDIR="$pkgdir" cmake --install .
}
